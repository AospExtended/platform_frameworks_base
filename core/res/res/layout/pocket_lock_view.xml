<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pocket_mode_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <View
        android:id="@+id/scrim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/pocket_mode_inner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pocket_view_inner_view_margin_top"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pocket_view_title"
            style="@style/pocket_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pocket_view_title_margin_horizontal"
            android:layout_marginRight="@dimen/pocket_view_title_margin_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/pocket_view_title" />

        <ImageView
            android:id="@+id/pocket_mode_phone"
            android:layout_width="@dimen/pocket_view_img_width"
            android:layout_height="@dimen/pocket_view_img_height"
            android:layout_marginTop="@dimen/pocket_view_img_margin_top"
            android:src="@drawable/pocket_mode_img" />

        <TextView
            android:id="@+id/pocket_view_title_cancel"
            style="@style/pocket_view_title_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pocket_view_cancel_margin_horizontal"
            android:layout_marginTop="@dimen/pocket_view_title_cancel_margin_top"
            android:layout_marginRight="@dimen/pocket_view_cancel_margin_horizontal"
            android:gravity="center_vertical"
            android:text="@string/pocket_view_title_cancel" />

        <LinearLayout
            android:id="@+id/pocket_view_top_tag_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pocket_view_cancel_margin_horizontal"
            android:layout_marginTop="@dimen/pocket_view_top_tag_view1_margin_top"
            android:layout_marginRight="@dimen/pocket_view_cancel_margin_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pocket_view_top_tag_number1"
                style="@style/pocket_view_top_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_view_top_tag_number1" />

            <TextView
                android:id="@+id/pocket_view_top_tag_cancel"
                style="@style/pocket_view_top_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_view_top_tag_cancel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocket_view_top_tag_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pocket_view_cancel_margin_horizontal"
            android:layout_marginTop="@dimen/pocket_view_top_tag_view2_margin_top"
            android:layout_marginRight="@dimen/pocket_view_cancel_margin_horizontal"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pocket_view_top_tag_number2"
                style="@style/pocket_view_top_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_view_top_tag_number2" />

            <TextView
                android:id="@+id/pocket_view_top_tag_cancel2"
                style="@style/pocket_view_top_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_view_top_tag_cancel2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
