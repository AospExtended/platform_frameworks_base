<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/columbus_dialog_background"
    android:orientation="vertical"
    android:paddingEnd="@dimen/columbus_target_request_dialog_end_padding"
    android:paddingStart="@dimen/columbus_target_request_dialog_start_padding"
    android:paddingTop="@dimen/columbus_target_request_dialog_top_padding">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/columbus_target_request_dialog_icon_size"
                android:layout_height="@dimen/columbus_target_request_dialog_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_quick_tap"
                android:tint="?androidprv:attr/colorAccentPrimaryVariant"
                android:tintMode="src_in" />

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/columbus_target_request_dialog_title_to_content_space"
                android:layout_marginTop="@dimen/columbus_target_request_dialog_icon_to_title_space"
                android:lineHeight="@dimen/columbus_target_request_dialog_title_line_height"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/columbus_target_request_dialog_title_text_size" />

            <TextView
                android:id="@id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/columbus_target_request_dialog_content_to_button_space"
                android:lineHeight="@dimen/columbus_target_request_dialog_content_line_height"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/columbus_target_request_dialog_content_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:minHeight="@dimen/columbus_target_request_dialog_button_height">

                <Button
                    android:id="@+id/negative_button"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/columbus_chip_background"
                    android:layout_marginEnd="@dimen/columbus_target_request_dialog_button_to_button_space"
                    android:lineHeight="@dimen/columbus_target_request_dialog_content_line_height"
                    android:paddingEnd="@dimen/columbus_target_request_dialog_button_background_radius"
                    android:paddingStart="@dimen/columbus_target_request_dialog_button_background_radius"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/columbus_target_request_dialog_content_text_size" />

                <Button
                    android:id="@+id/positive_button"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/columbus_chip_background"
                    android:lineHeight="@dimen/columbus_target_request_dialog_content_line_height"
                    android:paddingEnd="@dimen/columbus_target_request_dialog_button_background_radius"
                    android:paddingStart="@dimen/columbus_target_request_dialog_button_background_radius"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/columbus_target_request_dialog_content_text_size" />

            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="@dimen/columbus_target_request_dialog_bottom_padding" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
