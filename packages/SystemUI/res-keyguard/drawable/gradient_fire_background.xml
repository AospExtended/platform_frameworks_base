<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:dither="true"
                android:type="radial"
                android:gradientRadius="120%p"
                android:startColor="#000000"
                android:centerColor="#20000000"
                android:endColor="#00000000"
                android:centerX="-0.1"
                android:centerY="1.2"/>
        </shape>
    </item>
    <item>
        <shape>
        <gradient
            android:dither="true"
            android:type="linear"
            android:angle="90"
            android:startColor="#000000"
            android:centerColor="#40000000"
            android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>