<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.clock.ClockLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|top">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:alpha="0.85"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clock_view"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextClock
            android:id="@+id/clockHr"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/oronos_solidbg"
            android:format12Hour="hh"
            android:format24Hour="kk"
            android:letterSpacing="0.1"
            android:textSize="36sp" />

        <TextClock
            android:id="@+id/clockMin"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/oronos_roundbg"
            android:format12Hour="mm"
            android:format24Hour="mm"
            android:layout_weight="1"
            android:letterSpacing="0.1"
            android:textSize="36sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/longDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        layout_marginTop="4dp"
        android:paddingTop="8dp"
        android:background="@drawable/oronos_roundbg"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:letterSpacing="0.2" />

</LinearLayout>

</com.android.keyguard.clock.ClockLayout>
